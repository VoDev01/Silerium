@model Silerium.Models.Subcategory

@{
    ViewData["Title"] = "Создание подкатегории";
    Layout = "_AdminPanelLayout";
}

<div class="mx-3">
    <h1>Новая подкатегория</h1>
    <hr />
    <div class="row flex-column">
        <div class="col-md-4">
            <form asp-action="CreateSubcategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label mb-2">Название</label>
                    <input asp-for="Name" class="form-control mb-2" />
                    <span asp-validation-for="Name" class="text-danger mb-2"></span>
                    <input name="categoryid" value="@Model.Category.Id" hidden />
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4 mb-2">
            <h4>Категория</h4>
            @if (Model != null)
            {
                <a asp-action="EditCategory" asp-controller="Admin" class="mb-2 text-decoration-none">@Model.Category.Name</a>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
