@model IEnumerable<Silerium.Models.Category>

@{
    ViewData["Title"] = "Подкатегории";
}

<div class="mx-3">
    <h1>Подкатегории</h1>

    <p>
        <a asp-action="CreateSubcategory" class="btn btn-success">Создать новую подкатегорию</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Подкатегории")
                </th>
                <th>
                    @Html.DisplayName("Категория")
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @foreach(var subcategory in category.Subcategories)
                            {
                                Html.DisplayFor(modelItem => subcategory.Name);
                            }
                        </td>
                        <td>
                            @if (category != null)
                            {
                                <a asp-action="EditCategory" asp-route-id="@category.Id">@Html.DisplayFor(modelItem => category.Name)</a>
                            }
                        </td>
                        <td>
                            <a asp-action="EditSubcategory" asp-route-id="@category.Id" class="btn btn-warning">Редактировать</a>
                            <a asp-action="DeleteSubcategory" asp-route-id="@category.Id" class="btn btn-danger">Удалить</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Index" class="btn btn-secondary">К админ панели</a>
    </div>
</div>
