@model Silerium.ViewModels.SubcategoryViewModel

@{
    ViewData["Title"] = "Редактирование категории";
    Layout = "_AdminPanelLayout";
}

<div class="mx-3">
    <h1>Редактирование подкатегории</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditSubcategory" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <input type="hidden" asp-for="Subcategory.Id" />
                <div class="form-group mb-3">
                    <label asp-for="Subcategory.Name" class="control-label">Название</label>
                    <input asp-for="Subcategory.Name" class="form-control" />
                    <span asp-validation-for="Subcategory.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="form_image">Картинка категории</label>
                    <input type="file" class="form-control" asp-for="FormImage" id="form_image"/>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
