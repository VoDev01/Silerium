@model Silerium.Models.Subcategory

@{
    ViewData["Title"] = "Редактирование категории";
}

<div class="mx-3">
    <h1>Редактирование подкатегории</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditSubcategory">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">К админ панели</a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
