@model IEnumerable<Silerium.Models.Product>

@{
    ViewData["Title"] = "Товары";
    Layout = "_AdminPanelLayout";
}
<div class="mx-3">
    <h1>Товары</h1>
    
    <p>
        <a asp-action="CreateProduct" class="btn btn-success">Создать новый товар</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Название товара")
                </th>
                <th>
                    @Html.DisplayName("Описание")
                </th>
                <th>
                    @Html.DisplayName("Кол-во")
                </th>
                <th>
                    @Html.DisplayName("Доступен для продажи")
                </th>
                <th>
                    @Html.DisplayName("Подкатегория")
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockAmount)<span>шт.</span>
                </td>
                <td>
                        @{
                            if (item.Available)
                                Html.Display("Да");
                            else
                                Html.Display("Нет");
                        }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subcategory.Name)
                </td>
                <td>
                    <a asp-action="EdiProduct" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>