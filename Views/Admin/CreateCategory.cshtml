@model CategoryViewModel

@{
    ViewData["Title"] = "Создание категории";
    Layout = "_AdminPanelLayout";
}
<div class="mx-3">
    <h1>Новая категория</h1>
    <hr />
    <div class="row flex-column">
        <div class="col-md-4">
            <form asp-action="CreateCategory" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category.Name" class="control-label mb-2">Название</label>
                    <input asp-for="Category.Name" class="form-control mb-2" />
                    <span asp-validation-for="Category.Name" class="text-danger mb-2"></span>

                    <label asp-for="Category.PageName" class="control-label mb-2">Название страницы(англ.)</label>
                    <input asp-for="Category.PageName" class="form-control mb-2" />
                    <span asp-validation-for="Category.PageName" class="text-danger mb-2"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="form_image">Картинка категории</label>
                    <input type="file" class="form-control" asp-for="FormImage" id="form_image"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
