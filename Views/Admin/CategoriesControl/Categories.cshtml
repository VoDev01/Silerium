@model IEnumerable<Silerium.Models.Category>

@{
    ViewData["Title"] = "Категории товаров";
    Layout = "_AdminPanelLayout";
}
<div class="mx-3">

    <form style="width: 200px; margin-bottom: 15px;" asp-action="SearchCategories" asp-controller="Admin">
        <label class="form-label" for="searchCategories">Поиск</label>
        <input type="search" class="form-control" name="searchCategories" id="searchCategories" />
    </form>
    <h1>Категории</h1>
    
    <p>
        <a asp-action="CreateCategory" class="btn btn-success">Создать новую категорию</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Название категории")
                </th>
                <th>
                    @Html.DisplayName("Подкатегории")
                </th>
            </tr>
        </thead>
        <tbody>
        @if(Model.Count() != 0)
        {
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (item.Subcategories.Count() != 0)
                        {
                            @foreach (var subCategory in item.Subcategories)
                            {
                                <a class="text-decoration-none text-black" asp-action="EditSubCategory" asp-route-id="@subCategory.Id">
                                    @Html.DisplayFor(modelItem => subCategory.Name)
                                </a>
                            }
                        }
                    </td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                        <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>