        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/1162332_ORH85K0.jpg" alt="Мониторы и телевизоры">
            <div class="carousel-caption d-none d-lg-block text-black">
                <h3>Мониторы и телевизоры</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/9425704_801.jpg" alt="Смартфоны">
            <div class="carousel-caption d-none d-lg-block text-white">
                <h3>Смартфоны</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/sile-complexity-controls-global-communication-industry-order-generated-by-ai.jpg" alt="Комплуктующие ПК">
            <div class="carousel-caption d-none d-lg-block text-white">
                <h3>Комплуктующие ПК</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/laptop-with-blank-black-screen-white-table.jpg" alt="Ноутбуки">
            <div class="carousel-caption d-none d-lg-block text-black">
                <h3>Ноутбуки</h3>
            </div>
        </div>
    </div>
</div>
<div class="row g-0 bg-black" style="margin: 0 1px;">
    <div class="col-md-6 text-white d-flex justify-content-center flex-column px-2">
        <h3 style="font-size: 55px;">
            Скидки
        </h3>
        <p style="font-size: 36px;">
            Успейте купить все товары
            <br />
            по выгодной цене!
        </p>
    </div>
    <div class="col-md-6">
        <img class="d-block" src="~/images/33818723_m010t0564_b_banner_24oct22.jpg" alt="Скидки" style="height: 600px; width: 100%;" />
    </div>
</div>
