@{
    ViewData["Title"] = "Главная страница";
}

<div class="container">
    <div id="carouselIndicators" class="carousel slide w-100" data-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="images/household appliance realistic.jpg" alt="Бытовая техника">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Бытовая техника</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/isolated_tablet_laptop_and_smartphone_composition.jpg" alt="Электроника">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Электроника</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/kartinkin-com-p-stroimateriali-fon-krasivo.jpg" alt="Стройматериалы">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Стройматериалы</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/top-view-different-types-tools.jpg" alt="Инструменты">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Инструменты</h3>
                </div>
            </div>
        </div>
    </div>
</div>