@model IEnumerable<Silerium.Models.Category>

@{
    ViewData["Title"] = "Категории";
}
<div class="mx-auto">
    <h1>Категории</h1>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col col-sm-12 col-md-6 col-xl-4">
                @if(category.Image != null)
                {
                    <img class="category-image" src="@category.Image" alt="@category.Name">
                }
                <a class="text-decoration-none d-block" href="/Categories/@category.PageName">
                    @category.Name
                </a>
            </div>
        }
    </div>
</div>