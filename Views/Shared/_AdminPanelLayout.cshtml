<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Silerium</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SileriumDirectory.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <nav class="navbar navbar-light border-bottom box-shadow align-content-end">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="font-size: 28px;">Silerium</a>
        </div>
    </nav>
    <div class="container-fluid h-100 g-0">
        <main role="main" class="pb-3 h-100">
            <div class="row flex-column flex-lg-row h-100 g-0">
                <div class="toolbar col col-lg-4 col-xl-3 h-100">
                    <ul class="nav flex-column">
                        <li class ="nav-item mb-1">
                            <h2 class="text-center">Админ панель</h2>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Categories" asp-controller="Admin">Категории</a>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Subcategories" asp-controller="Admin">Подкатегории</a>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Products" asp-controller="Admin">Товары</a>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Users" asp-controller="Admin">Пользователи</a>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Media" asp-controller="Admin">Медиа</a>
                        </li>
                        <li class="nav-item mb-1">
                            <a class="nav-link d-block" asp-action="Orders" asp-controller="Admin">Заказы</a>
                        </li>
                        <li class ="nav-item mb-1">
                            <a class="nav-link text-black text-decoration-none" asp-controller="User" asp-action="Profile">
                                Личный кабинет
                                <i class="bi bi-box-arrow-in-right"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col col-lg-8 col-xl-9 px-3">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2023 - Silerium
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
